#WAP to Find Smallest,Even,Odd,Largest Number from the list of entered values.

#Smallest and Largest number in a list
list1=[]
num = int(input("Enter the Total Number of List Elements :"))
for i in range(1,num + 1) :
    value1 = int(input("Enter the Value of %d Element :" %i))
    list1.append(value1)
print("The Smallest Element in this List is : ", min(list1))
print("The Largest Element in this List is : ", max(list1))

#Even and Odd Number in a list
list2 = []
Even = []
Odd = []
j = 0
number = int(input("Enter the Total Number of List Elements :"))
for i in range(1,number + 1):
    value2 = int(input("Enter the Value of %d Elements :" %i))
    list2.append(value2)
while(j < number):
    if(list2[j] % 2 ==0):
        Even.append(list2[j])
    else:
        Odd.append(list2[j])
    j = j+1
print("Element in Even List is : ", Even)
print("Element in Odd List is : ", Odd)
